<article xmlns:xlink="http://www.w3.org/1999/xlink" article-type="research-article"><?properties open_access?><front><journal-meta><journal-id journal-id-type="nlm-ta">BMC Public Health</journal-id><journal-title>BMC Public Health</journal-title><issn pub-type="epub">1471-2458</issn><publisher><publisher-name>BioMed Central</publisher-name></publisher></journal-meta><article-meta><article-id pub-id-type="pmid">19159492</article-id><article-id pub-id-type="pmc">2637858</article-id><article-id pub-id-type="publisher-id">1471-2458-9-30</article-id><article-id pub-id-type="doi">10.1186/1471-2458-9-30</article-id><article-categories><subj-group subj-group-type="heading"><subject>Research Article</subject></subj-group></article-categories><title-group><article-title>The impact of demographic and risk factor changes on coronary heart disease deaths in Beijing, 1999&#x02013;2010</article-title></title-group><contrib-group><contrib id="A1" contrib-type="author"><name><surname>Cheng</surname><given-names>Jun</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>wgcj5098@yahoo.com.cn</email></contrib><contrib id="A2" corresp="yes" contrib-type="author"><name><surname>Zhao</surname><given-names>Dong</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>deezhao@vip.sina.com</email></contrib><contrib id="A3" contrib-type="author"><name><surname>Zeng</surname><given-names>Zhechun</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>zhechunzeng@yahoo.com.cn</email></contrib><contrib id="A4" contrib-type="author"><name><surname>Critchley</surname><given-names>Julia Alison</given-names></name><xref ref-type="aff" rid="I2">2</xref><email>j.a.critchley@newcastle.ac.uk</email></contrib><contrib id="A5" contrib-type="author"><name><surname>Liu</surname><given-names>Jing</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>jingliu0516@yahoo.com.cn</email></contrib><contrib id="A6" contrib-type="author"><name><surname>Wang</surname><given-names>Wei</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>weiwuang@sohu.com</email></contrib><contrib id="A7" contrib-type="author"><name><surname>Sun</surname><given-names>Jiayi</given-names></name><xref ref-type="aff" rid="I1">1</xref><email>heyiyao@hotmail.com</email></contrib><contrib id="A8" contrib-type="author"><name><surname>Capewell</surname><given-names>Simon</given-names></name><xref ref-type="aff" rid="I3">3</xref><email>capewell@liverpool.ac.uk</email></contrib></contrib-group><aff id="I1"><label>1</label>Department of Epidemiology, Beijing Institute of Heart, Lung &#x00026; Blood Vessel Diseases, Beijing Anzhen Hospital affiliated to the Capital Medical University, Beijing, PR China</aff><aff id="I2"><label>2</label>Institute of Health and Society, Newcastle University, Newcastle, UK</aff><aff id="I3"><label>3</label>The Division of Public Health, University of Liverpool, Liverpool, UK</aff><pub-date pub-type="collection"><year>2009</year></pub-date><pub-date pub-type="epub"><day>22</day><month>1</month><year>2009</year></pub-date><volume>9</volume><fpage>30</fpage><lpage>30</lpage><ext-link ext-link-type="uri" xlink:href="http://www.biomedcentral.com/1471-2458/9/30"/><history><date date-type="received"><day>5</day><month>5</month><year>2008</year></date><date date-type="accepted"><day>22</day><month>1</month><year>2009</year></date></history><permissions><copyright-statement>Copyright &#x000a9; 2009 Cheng et al; licensee BioMed Central Ltd.</copyright-statement><copyright-year>2009</copyright-year><copyright-holder>Cheng et al; licensee BioMed Central Ltd.</copyright-holder><license license-type="open-access" xlink:href="http://creativecommons.org/licenses/by/2.0"><p>This is an Open Access article distributed under the terms of the Creative Commons Attribution License (<ext-link ext-link-type="uri" xlink:href="http://creativecommons.org/licenses/by/2.0"/>), which permits unrestricted use, distribution, and reproduction in any medium, provided the original work is properly cited.</p><!--<rdf xmlns="http://web.resource.org/cc/" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:dc="http://purl.org/dc/elements/1.1" xmlns:dcterms="http://purl.org/dc/terms"><Work xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:dcterms="http://purl.org/dc/terms/" rdf:about=""><license rdf:resource="http://creativecommons.org/licenses/by/2.0"/><dc:type rdf:resource="http://purl.org/dc/dcmitype/Text"/><dc:author>
